# ==============================================
# AUDITOR FAMILIAR - Environment Variables
# ==============================================
# Copiar este archivo a .env y configurar con valores reales
# NUNCA subir .env a GitHub

# ---------------------------------------------
# Database Configuration
# ---------------------------------------------
# Tipo de base de datos: sqlite | postgresql
DB_TYPE=postgresql

# PostgreSQL Configuration (Producción)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=auditor_familiar
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here

# SQLite Configuration (Desarrollo/Testing)
SQLITE_DB_PATH=shopping.db

# ---------------------------------------------
# Application Configuration
# ---------------------------------------------
# Entorno: development | production | testing
APP_ENV=development

# Secret key para sesiones (generar con: python -c "import secrets; print(secrets.token_hex(32))")
SECRET_KEY=change_this_to_a_random_secret_key

# ---------------------------------------------
# Security
# ---------------------------------------------
# Habilitar modo debug (solo desarrollo)
DEBUG=True

# Allowed hosts (separados por coma)
ALLOWED_HOSTS=localhost,127.0.0.1

# ---------------------------------------------
# Logging
# ---------------------------------------------
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# ---------------------------------------------
# Docker Configuration
# ---------------------------------------------
# Puerto de la aplicación
APP_PORT=8550

# pgAdmin (opcional, para administración de BD)
PGADMIN_EMAIL=admin@auditor.local
PGADMIN_PASSWORD=change_this_pgadmin_password
PGADMIN_PORT=5050
